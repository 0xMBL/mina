ARG image=debian:stretch-slim
FROM ${image} AS daemon
# Run with `docker build --build-arg deb_version=<version>`
ARG deb_version=1.3.1.2
ARG network=mainnet

# We do not install the below platform-specific dependencies,
# and instead assume that apt will install the proper deps based on the package definition.
# The packages are noted here just for clarity/documentation.
# Stretch-only Deps:
#    libffi6
#    libprocps6
#    libjemalloc1
# Buster-only Deps:
#    libffi7
#    libprocps7
#    libjemalloc2
# Focal-only Deps:
#    libffi7
#    libprocps8
#    libjemalloc2


# Dependencies
RUN DEBIAN_FRONTEND=noninteractive apt-get -y update && \
  DEBIAN_FRONTEND=noninteractive apt-get -y upgrade && \
  DEBIAN_FRONTEND=noninteractive apt-get -y install \
    curl \
    dnsutils \
    dumb-init \
    gettext \
    gnupg2 \
    libgmp10 \
    libgomp1 \
    libssl1.1 \
    libpq-dev \
    procps \
    tzdata \
    'libjemalloc.$' \
    'libffi.$' \
    'libprocps.$'

# Mina daemon package, copied from the builder container
COPY --from=builder /home/opam/mina/_build/mina-${network}_${deb_version}.deb /root/mina-daemon-package.deb
# And then installed
RUN echo "Building image with version $deb_version from compiled debian package for network $network" \
  && dpkg -i /root/mina-daemon-package.deb \
  && rm -rf /root/mina-daemon-package.deb

WORKDIR /root/
USER 0

COPY --chown=${UID} scripts/healthcheck-utilities.sh /healthcheck/utilities.sh
COPY --chown=${UID} scripts/cron_job_dump_ledger.sh /cron_job_dump_ledger.sh
COPY --chown=${UID} scripts/daemon-entrypoint.sh /entrypoint.sh
# Solve this by marking scripts executable in git
COPY --chown=${UID} ./auxiliary_entrypoints /entrypoint.d

ENV MINA_TIME_OFFSET 0

ENTRYPOINT ["/usr/bin/dumb-init", "/entrypoint.sh"]
