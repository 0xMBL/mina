ARG image=debian:bullseye-slim
ARG MINA_BUILDER_STAGE=builder
# Mina daemon docker image, built and packaged via the staged dockerfiles directly into a clean production container
FROM ${image} AS daemon
ARG deb_version=1.3.1.2
ARG network=mainnet
# The container to pull artifacts from, expected to be from stage 3-builder
# but it can also be supplied as a build arg to pull from a specific pre-built image for speed
ARG MINA_BUILDER_STAGE=builder

# Dependencies
RUN DEBIAN_FRONTEND=noninteractive apt-get -y update && \
  DEBIAN_FRONTEND=noninteractive apt-get -y upgrade && \
  DEBIAN_FRONTEND=noninteractive apt-get -y install \
    apt-transport-https \
    curl \
    dnsutils \
    dumb-init \
    gettext \
    gnupg2 \
    libgmp10 \
    libgomp1 \
    libssl1.1 \
    libpq-dev \
    procps \
    tzdata \
    'libjemalloc.$' \
    'libffi.$' \
    'libprocps.$'

# Mina daemon package, copied from the builder container
COPY --from=builder /home/opam/mina/_build/mina-${network}_${deb_version}.deb /root/mina-daemon-package.deb
# And then installed
RUN echo "Building image with version $deb_version from compiled debian package for network $network" \
  && dpkg -i /root/mina-daemon-package.deb \
  && rm -rf /root/mina-daemon-package.deb

WORKDIR /root/
USER 0

COPY scripts/healthcheck-utilities.sh /healthcheck/utilities.sh
COPY scripts/cron_job_dump_ledger.sh /cron_job_dump_ledger.sh
COPY scripts/daemon-entrypoint.sh /entrypoint.sh
COPY ./auxiliary_entrypoints /entrypoint.d

ENV MINA_TIME_OFFSET 0

ENTRYPOINT ["/usr/bin/dumb-init", "/entrypoint.sh"]

# Additional stage daemon-puppet with tools used in minaprotocol/mina CI/CD to test and orchestrate the container, but are not strictly required to run mina
# Build with --target daemon in docker to skip this stage
FROM daemon AS daemon-puppet

RUN echo "deb [signed-by=/usr/share/keyrings/cloud.google.gpg] https://packages.cloud.google.com/apt cloud-sdk main" | tee -a /etc/apt/sources.list.d/google-cloud-sdk.list \
  && curl https://packages.cloud.google.com/apt/doc/apt-key.gpg | apt-key --keyring /usr/share/keyrings/cloud.google.gpg add - \
  && DEBIAN_FRONTEND=noninteractive apt-get update \
  && DEBIAN_FRONTEND=noninteractive apt-get install -y \
    google-cloud-sdk \
    kubectl \
    apt-transport-https \
    ca-certificates \
    jq \
    python3 && \
  rm -rf /var/lib/apt/lists/*

COPY puppeteer-context/* /
RUN chmod +x /mina_daemon_puppeteer.py /find_puppeteer.sh /start.sh /stop.sh

ENTRYPOINT ["/usr/bin/dumb-init", "/entrypoint.sh"]
